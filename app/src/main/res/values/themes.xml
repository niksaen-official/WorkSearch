<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WorkSearch" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray3</item>
        <item name="textAllCaps">false</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="WorkSearchMenu" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:color">@color/black</item>
        <item name="colorOnSurface">@color/blue</item>
        <item name="colorOnSecondaryContainer">@color/blue</item>
        <item name="colorOnSurfaceVariant">@color/gray4</item>
    </style>

    <style name="WorkSearchMenu.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/black</item>
        <item name="colorOnSurface">@color/blue</item>
    </style>

</resources>